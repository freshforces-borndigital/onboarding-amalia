{
    "overrides": [
        {
            "files": [
                "./react/**.{js,jsx}",
                "webpack.config.js",
                "webpack.config.babel.js"
            ],
            "options": {
                "trailingComma": "all",
                "tabWidth": 2,
                "useTabs": false,
                "semi": false
            }
        },
        {
            "files": ["/assets/**.js"],
            "options": {
                "trailingComma": "all",
                "tabWidth": 4,
                "useTabs": false,
                "semi": false
            }
        },
        {
            "files": [
                ".vscode/**",
                ".babelrc",
                ".prettierrc",
                "jsconfig.json",
                "**.{css,scss}",
                "gulpfile.js",
                "compiler.options.js"
            ],
            "options": {
                "useTabs": false,
                "tabWidth": 4,
                "trailingComma": "all"
            }
        },
        {
            "files": [
                "**.php"
            ],
            "options": {
                "printWidth": 120
            }
        }
    ]
}
